@model IEnumerable<Gasto>

@{
    ViewData["Title"] = "Gastos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Gastos</h2>
        <p class="text-muted mb-0">Gerencie todos os seus gastos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Gasto
    </a>
</div>

@if (Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 ps-3">Descrição</th>
                            <th class="border-0">Categoria</th>
                            <th class="border-0">Conta</th>
                            <th class="border-0">Data</th>
                            <th class="border-0">Status</th>
                            <th class="border-0 text-end">Valor</th>
                            <th class="border-0 text-center pe-3">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gasto in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@gasto.Descricao</div>
                                    @if (!string.IsNullOrEmpty(gasto.Tags))
                                    {
                                        <small class="text-muted">@gasto.Tags</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge" style="background-color: @gasto.Categoria.Cor; color: white;">
                                        @gasto.Categoria.Nome
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted">@gasto.Conta.Nome</span>
                                </td>
                                <td>
                                    <span class="text-muted">@gasto.Data.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    @if (gasto.EstaPago)
                                    {
                                        <span class="badge bg-success">Pago</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pendente</span>
                                    }
                                    
                                    @if (gasto.EhDespesaFixa)
                                    {
                                        <span class="badge bg-info ms-1">Fixa</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <span class="fw-semibold text-danger">R$ @gasto.Valor.ToString("N2")</span>
                                </td>
                                <td class="text-center pe-3">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@gasto.Id" class="btn btn-outline-primary btn-sm" title="Ver detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@gasto.Id" class="btn btn-outline-secondary btn-sm" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@gasto.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Resumo simples -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <h5 class="text-muted">Total de Gastos</h5>
                    <h3 class="text-danger">R$ @Model.Sum(g => g.Valor).ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 bg-light">
                <div class="card-body text-center">
                    <h5 class="text-muted">Quantidade</h5>
                    <h3 class="text-primary">@Model.Count() gastos</h3>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Estado vazio -->
    <div class="text-center py-5">
        <i class="bi bi-credit-card text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Nenhum gasto encontrado</h4>
        <p class="text-muted">Comece adicionando seu primeiro gasto</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Adicionar Primeiro Gasto
        </a>
    </div>
}